<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movie_news_title"
        android:textSize="18sp"
        android:maxLines="2"
        android:textColor="@android:color/primary_text_light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_news_time"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pub_time"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="#333"
            android:text="@string/movie_news_desc"/>
        
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/tv_desc"
            android:layout_alignParentRight="true"
            android:src="@drawable/poster"
            android:scaleType="centerCrop"/>

    </RelativeLayout>


</LinearLayout>